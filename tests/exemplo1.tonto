package ModeloDeProva

import Hospital

// R3: Datatype (Forma de bloco)
datatype Endereco {
    rua: string [1]
    cep: number [8]
}

// R4: Enum (Literais terminando em número, conforme Lexer)
enum StatusCivil { Solteiro01, Casado02, Divorciado03 }

// R2: Classe com atributos, especialização e tipos customizados
kind Cliente {
    nome: string [1]
    idade: number [1] { derived }
    estado_civil: StatusCivil // Uso do Enum
    moradia: Endereco // Uso do Datatype
}

// R2 e R5: Classes para Genset
phase Crianca specializes Cliente
phase Adulto specializes Cliente

// R5: Generalização (Genset em bloco)
disjoint complete genset FasesDaVida {
    general Cliente
    specifics Crianca, Adulto
}

// R6a: Relações Internas
relator ContratoServico {
    @mediation [1] -- [1] Cliente
    @mediation [1] -- [1] FuncionarioDaUBS 
}

// R6b: Relação Externa
@material relation Cliente [1..*] -- contrata -- [1..*] ContratoServico