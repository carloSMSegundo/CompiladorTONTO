package RelacoesTeste

// Classe com Relacão Interna (Agregação)
kind University {
    // RELAÇÃO INTERNA: University é composta por Department
    @componentOf [1] <>-- [1..*] Department
}

// Classe que é o alvo da relação interna e participante da externa
kind Department {
    name: string
}

// Classe participante da relação externa
kind Employee

// RELAÇÃO EXTERNA: Mediação entre EmploymentContract e Employee
relator EmploymentContract

@mediation relation EmploymentContract [1..1]
-- emprega -- [0..*] Employee